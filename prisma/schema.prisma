// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             Int          @id      @default(autoincrement())
  avatar         String
  name           String
  email          String       @unique
  username       String       @unique
  password       String
  contacts       Contacts[]
  diary          Diary[]
  rooms          Rooms[]
  joined_rooms   JoinedRooms[]
}

model Contacts {
  id              Int           @id     @default(autoincrement())
  profile         String
  name            String
  phone           String
  email           String
  address         String?
  facebook        String?
  instagram       String?
  twitter         String?
  tiktok          String?
  youtube         String?
  favorite        Boolean       @default(false)
  user            User          @relation(fields: [userId], references: [id])
  userId          Int
}

model Diary {
  id              Int           @id      @default(autoincrement())
  photo           String
  title           String        @unique
  content         String
  date            String
  user            User          @relation(fields: [userId], references: [id])
  userId          Int
}

model Rooms {
  id              Int           @id      @default(autoincrement())
  image           String
  name            String        @unique
  status          String
  date            String
  author          User          @relation(fields: [authorId], references: [id])
  authorId        Int
}

model JoinedRooms {
  id              Int           @id      @default(autoincrement())
  image           String
  name            String        @unique
  status          String
  date            String
  rooms           String
  messages        Messages[]
  user            User          @relation(fields: [userId], references: [id])
  userId          Int
}

model Messages {
  id              Int           @id      @default(autoincrement())
  message         String
  to              String
  from            String
  date            String
  joined_rooms    JoinedRooms   @relation(fields: [joined_roomId], references: [id])
  joined_roomId   Int
}